{
  "version": 2,
  "env": {
    "DJANGO_SETTINGS_MODULE": "ecommerce.vercel_settings",
    "VERCEL": "1",
    "PYTHONUNBUFFERED": "1",
    "PIP_ONLY_BINARY": ":all:"
  },
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "ecommerce.vercel_settings",
      "VERCEL": "1",
      "PYTHONUNBUFFERED": "1",
      "PIP_ONLY_BINARY": ":all:"
    }
  },
  "builds": [
    {
      "src": "ecommerce/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "excludeFiles": "{pbl/**,t-shirt-designer-webapp/**,static/**,staticfiles/**,media/**,logs/**,docs/**,tests/**,**/*.zip,**/*.tar,**/*.tar.gz,**/*.tgz,.git/**}"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ecommerce/wsgi.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput --clear",
  
  "devCommand": "python manage.py runserver",
  "framework": null
}
